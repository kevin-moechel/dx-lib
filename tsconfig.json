{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["cli", "src"],
    "exclude": ["node_modules"]
}
